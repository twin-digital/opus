{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build:typescript": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "!dist/assets/**"]
    },
    "build:copy-assets": {
      "inputs": ["assets/**"],
      "outputs": ["dist/assets/**"]
    },
    "build": {
      "dependsOn": ["build:typescript", "build:copy-assets"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true,
      "with": ["watch:typescript", "watch:copy-assets"]
    },
    "lint": {
      "dependsOn": ["@twin-digital/eslint-config#build"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["@twin-digital/eslint-config#build"],
      "outputs": []
    },
    "release": {
      "dependsOn": ["build"]
    },
    "test": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "watch:typescript": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "watch:copy-assets": {
      "cache": false,
      "persistent": true
    }
  }
}
