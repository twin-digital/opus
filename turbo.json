{
  "$schema": "./node_modules/turbo/schema.json",
  "globalPassThroughEnv": [
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_SESSION_TOKEN",
    "CI",
    "SERVERLESS_ACCESS_KEY",
    "USER_ID"
  ],
  "tasks": {
    "▪️:build:copy-assets": {
      "inputs": ["assets/**", "package.json"],
      "outputs": ["dist/esm/assets/**"]
    },
    "▪️:build:copy-assets:cjs": {
      "inputs": ["assets/**", "package.json"],
      "outputs": ["dist/cjs/assets/**"]
    },
    "▪️:build:typescript": {
      "dependsOn": ["^build"],
      "inputs": ["package.json", "tsconfig.json", "tsconfig.*.json", "src/**"],
      "outputs": ["dist/esm/**", "!dist/esm/assets/**"]
    },
    "▪️:build:typescript:cjs": {
      "dependsOn": ["^build"],
      "inputs": ["package.json", "tsconfig.json", "tsconfig.*.json", "src/**"],
      "outputs": ["dist/cjs/**", "!dist/cjs/assets/**"]
    },
    "build": {
      "dependsOn": [
        "^build",
        "▪️:build:typescript",
        "▪️:build:copy-assets",
        "▪️:build:typescript:cjs",
        "▪️:build:copy-assets:cjs"
      ]
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "cache": false,
      "dependsOn": [
        "^deploy",
        "build",
        "▪️:deploy:terraform",
        "▪️:deploy:serverless"
      ]
    },
    "▪️:deploy:serverless": {
      "cache": false
    },
    "▪️:deploy:terraform": {
      "cache": false,
      "dependsOn": ["^deploy", "build", "▪️:deploy:terraform-init"]
    },
    "▪️:deploy:terraform-init": {
      "outputs": [".terraform"]
    },
    "destroy": {
      "cache": false,
      "dependsOn": ["destroy:serverless", "destroy:terraform"]
    },
    "destroy:serverless": {
      "cache": false
    },
    "destroy:terraform": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true,
      "with": [
        "▪️:watch:typescript",
        "▪️:watch:copy-assets",
        "▪️:watch:typescript:cjs",
        "▪️:watch:copy-assets:cjs"
      ]
    },
    "lint": {
      "dependsOn": ["lint:eslint", "lint:packagejson", "lint:prettier"]
    },
    "lint:eslint": {
      "dependsOn": ["@twin-digital/eslint-config#build"],
      "inputs": ["eslint.config.js", "package.json", "src/**"]
    },
    "lint:packagejson": {
      "inputs": ["package.json"]
    },
    "lint:prettier": {},
    "lint:fix": {
      "dependsOn": [
        "lint:fix:eslint",
        "lint:fix:packagejson",
        "lint:fix:prettier"
      ]
    },
    "lint:fix:eslint": {
      "dependsOn": ["@twin-digital/eslint-config#build"]
    },
    "lint:fix:packagejson": {},
    "lint:fix:prettier": {},
    "test": {
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["package.json", "tsconfig.json", "tsconfig.*.json", "src/**"],
      "outputs": []
    },
    "▪️:watch:typescript": {
      "cache": false,
      "dependsOn": ["▪️:build:typescript"],
      "persistent": true
    },
    "▪️:watch:typescript:cjs": {
      "cache": false,
      "dependsOn": ["▪️:build:typescript:cjs"],
      "persistent": true
    },
    "▪️:watch:copy-assets": {
      "cache": false,
      "dependsOn": ["▪️:build:copy-assets"],
      "persistent": true
    },
    "▪️:watch:copy-assets:cjs": {
      "cache": false,
      "dependsOn": ["▪️:build:copy-assets:cjs"],
      "persistent": true
    }
  }
}
