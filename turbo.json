{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build:typescript": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "!dist/assets/**"]
    },
    "build:copy-assets": {
      "inputs": ["assets/**"],
      "outputs": ["dist/assets/**"]
    },
    "build": {
      "dependsOn": ["build:typescript", "build:copy-assets"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["build"],
      "persistent": true,
      "with": ["watch:typescript", "watch:copy-assets"]
    },
    "lint": {
      "dependsOn": ["lint:eslint", "lint:packagejson", "lint:prettier"]
    },
    "lint:eslint": {
      "dependsOn": ["@twin-digital/eslint-config#build"]
    },
    "lint:packagejson": {},
    "lint:prettier": {},
    "lint:fix": {
      "dependsOn": [
        "lint:fix:eslint",
        "lint:fix:packagejson",
        "lint:fix:prettier"
      ]
    },
    "lint:fix:eslint": {
      "dependsOn": ["@twin-digital/eslint-config#build"]
    },
    "lint:fix:packagejson": {},
    "lint:fix:prettier": {},
    "release": {
      "dependsOn": ["build"]
    },
    "test": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "watch:typescript": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "watch:copy-assets": {
      "cache": false,
      "persistent": true
    }
  }
}
