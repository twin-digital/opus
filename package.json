  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@tsconfig/node22": "^22.0.5",
    "@twin-digital/repo-kit": "workspace:*",
    "@types/node": "^22.19.1",
    "aws-cdk": "^2.1032.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "author": "Sean Kleinjung <sean@twindigital.io>",
