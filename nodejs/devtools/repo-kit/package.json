{
  "name": "@twin-digital/repo-kit",
  "version": "0.0.3",
  "description": "CLI utilities for configuring and maintaining monorepos",
  "type": "module",
  "bin": {
    "repo-kit": "./dist/cli/entry-point.js"
  },
  "files": [
    "dist",
    "!dist/**/*.d.ts.map"
  ],
  "scripts": {
    "build:copy-assets": "rsync -a assets/ dist/assets",
    "build:typescript": "tsc",
    "lint": "eslint --no-error-on-unmatched-pattern src",
    "lint:fix": "eslint --no-error-on-unmatched-pattern --fix src && prettier --write --ignore-path ../../../.gitignore .",
    "typecheck": "tsc --noEmit",
    "watch:copy-assets": "chokidar 'assets/**/*' -c \"rsync -a --delete assets/ dist/assets/\"",
    "watch:typescript": "tsc --watch"
  },
  "dependencies": {
    "@pnpm/find-workspace-dir": "^1000.1.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "gray-matter": "^4.0.3",
    "json-merge-patch": "^1.0.2",
    "lodash-es": "^4.17.21",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@eslint/js": "catalog:",
    "@pnpm/types": "^1000.6.0",
    "@twin-digital/eslint-config": "workspace:*",
    "@twin-digital/tsconfig": "workspace:*",
    "@types/json-merge-patch": "^1.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.14.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "globals": "catalog:",
    "prettier": "catalog:",
    "typescript-eslint": "catalog:"
  }
}
