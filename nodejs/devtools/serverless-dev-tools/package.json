{
  "name": "@twin-digital/serverless-dev-tools",
  "version": "0.1.1",
  "description": "CLI tools for local Serverless Framework development",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "source": "./src/index.ts",
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    },
    "./index": null,
    "./index.js": null,
    "./*": {
      "import": {
        "source": "./src/*.ts",
        "types": "./dist/*.d.ts",
        "import": "./dist/*.js"
      }
    }
  },
  "bin": {
    "sls-dev-tools": "./bin/run.js"
  },
  "files": [
    "bin",
    "dist",
    "!dist/**/*.d.ts.map"
  ],
  "scripts": {
    "build": "build",
    "clean": "clean",
    "lint": "lint",
    "lint:fix": "lint_fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@oclif/core": "^4.8.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@twin-digital/eslint-config": "workspace:*",
    "@twin-digital/opus-scripts": "workspace:*",
    "@twin-digital/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "globals": "catalog:",
    "prettier": "catalog:",
    "prettier-package-json": "catalog:",
    "tsdown": "~0.18.3",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "engines": {
    "node": "24.x",
    "pnpm": "10.x"
  },
  "oclif": {
    "bin": "sls-dev-tools",
    "commands": {
      "strategy": "explicit",
      "target": "./dist/cli.js",
      "identifier": "Commands"
    },
    "dirname": "sls-dev-tools",
    "topicSeparator": " "
  }
}
