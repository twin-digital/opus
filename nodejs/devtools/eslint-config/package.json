{
  "name": "@twin-digital/eslint-config",
  "version": "0.0.1",
  "description": "Twin Digital's preferred eslint rules.",
  "type": "module",
  "files": [
    "dist",
    "!dist/**/*.d.ts.map"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*/index.js",
      "types": "./dist/*/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint --no-error-on-unmatched-pattern src",
    "lint:fix": "eslint --no-error-on-unmatched-pattern --fix src && prettier --write --ignore-path ../../../.gitignore .",
    "typecheck": "tsc --noEmit",
    "build:typescript": "tsc",
    "watch:typescript": "tsc --watch"
  },
  "dependencies": {
    "@eslint/js": "catalog:",
    "eslint-config-prettier": "catalog:",
    "globals": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "peerDependencies": {
    "eslint": ">= 9",
    "prettier": ">= 3"
  },
  "devDependencies": {
    "@twin-digital/tsconfig": "workspace:*",
    "typescript": "catalog:",
    "@types/node": "22.x"
  }
}
