{
  "name": "@twin-digital/json-patch-x",
  "version": "0.0.0",
  "description": "JSON patch library that provides custom extensions for operations not found in RFC 6902.",
  "type": "module",
  "files": [
    "dist",
    "!dist/**/*.d.ts.map"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*/index.js",
      "types": "./dist/*/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint --no-error-on-unmatched-pattern src",
    "lint:fix": "eslint --no-error-on-unmatched-pattern --fix src && prettier --write --ignore-path ../../../.gitignore .",
    "typecheck": "tsc --noEmit",
    "build:typescript": "tsc",
    "watch:typescript": "tsc --watch"
  },
  "dependencies": {
    "fast-json-patch": "^3.1.1"
  },
  "devDependencies": {
    "@twin-digital/tsconfig": "workspace:*",
    "@types/node": "22.x",
    "@eslint/js": "catalog:",
    "@twin-digital/eslint-config": "workspace:*",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "globals": "catalog:",
    "prettier": "catalog:",
    "typescript-eslint": "catalog:",
    "typescript": "catalog:"
  }
}
