{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": "${configDir}/src"
  },
  "include": [
    "${configDir}/src",
    "${configDir}/src/**/*.d.ts",
    "${configDir}/src/**/*.json"
  ],
  "exclude": ["${configDir}/src/**/*.spec.*", "${configDir}/src/**/*.test.*"]
}
