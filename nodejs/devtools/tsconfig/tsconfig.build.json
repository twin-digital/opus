{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "declarationDir": "${configDir}/dist",
    "noEmit": false,
    "rootDir": "${configDir}/src"
  },
  "include": [
    //
    "${configDir}/src/**/*.cjs",
    "${configDir}/src/**/*.cts",
    "${configDir}/src/**/*.js",
    "${configDir}/src/**/*.jsx",
    "${configDir}/src/**/*.ts",
    "${configDir}/src/**/*.tsx",
    "${configDir}/src/**/*.d.ts",
    "${configDir}/src/**/*.json"
  ],
  "exclude": ["${configDir}/src/**/*.spec.*", "${configDir}/src/**/*.test.*"]
}
