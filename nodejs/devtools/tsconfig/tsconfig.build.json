{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "emitDeclarationOnly": false
  },
  "include": [
    "${configDir}/src",
    "${configDir}/src/**/*.d.ts",
    "${configDir}/src/**/*.json"
  ],
  "exclude": ["${configDir}/src/**/*.spec.*", "${configDir}/src/**/*.test.*"]
}
