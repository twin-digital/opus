{
  "name": "@twin-digital/bookify",
  "version": "0.2.1",
  "description": "Core logic and models for the Bookify platform",
  "type": "module",
  "exports": {
    "./*": {
      "import": {
        "source": "./src/*.ts",
        "types": "./dist/*.d.ts",
        "import": "./dist/*.js"
      }
    },
    ".": {
      "import": {
        "source": "./src/index.ts",
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    },
    "./index": null,
    "./index.js": null
  },
  "files": [
    "bin",
    "dist",
    "!dist/**/*.d.ts.map"
  ],
  "scripts": {
    "build": "build",
    "clean": "clean",
    "dev": "turbo run watch",
    "lint": "lint",
    "lint:fix": "lint_fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "watch"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "chokidar": "^4.0.3",
    "execa": "^9.6.1",
    "lodash-es": "^4.17.21",
    "postcss": "^8.4.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@twin-digital/eslint-config": "workspace:*",
    "@twin-digital/opus-scripts": "workspace:*",
    "@twin-digital/tsconfig": "workspace:*",
    "@twin-digital/vitest-config": "workspace:*",
    "@types/chokidar": "^2.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "globals": "catalog:",
    "prettier": "catalog:",
    "prettier-package-json": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": "24.x",
    "pnpm": "10.x"
  }
}
