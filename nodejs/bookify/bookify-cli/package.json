{
  "name": "@twin-digital/bookify-cli",
  "version": "0.3.1",
  "description": "CLI toolkit for interacting with the Bookify publishing engine.",
  "type": "module",
  "exports": {
    "./*": {
      "import": {
        "source": "./src/*.ts",
        "types": "./dist/*.d.ts",
        "import": "./dist/*.js"
      }
    }
  },
  "bin": {
    "bookify": "./bin/run.js"
  },
  "files": [
    "bin",
    "dist",
    "!dist/**/*.d.ts.map"
  ],
  "scripts": {
    "build": "build",
    "clean": "clean",
    "dev": "turbo watch watch",
    "lint": "lint",
    "lint:fix": "lint_fix",
    "start": "./bin/run.js start",
    "typecheck": "tsc --noEmit",
    "watch": "watch"
  },
  "dependencies": {
    "@oclif/core": "^4.8.0",
    "@twin-digital/bookify": "workspace:*",
    "@types/express": "^5.0.6",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@twin-digital/eslint-config": "workspace:*",
    "@twin-digital/opus-scripts": "workspace:*",
    "@twin-digital/tsconfig": "workspace:*",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "globals": "catalog:",
    "prettier": "catalog:",
    "prettier-package-json": "catalog:",
    "ts-node": "^10.9.2",
    "tsdown": "^0.16.5",
    "typescript": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "engines": {
    "node": "24.x",
    "pnpm": "10.x"
  },
  "oclif": {
    "bin": "bookify",
    "commands": {
      "strategy": "explicit",
      "target": "./dist/cli.js",
      "identifier": "Commands"
    },
    "dirname": "bookify",
    "topicSeparator": " "
  }
}
